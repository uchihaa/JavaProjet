import java.util.Hashtable;
import java.util.Iterator;
import java.util.ListIterator;
import java.util.Vector;

public class Zone {
	private String nom;
	private Vector lesParkings;
	
	/*Constructed*/
	Zone(){
		nom = "";
		lesParkings = new Vector();
	}
	
	Zone(String p_nom){
		nom = p_nom;
		lesParkings = new Vector();
	}
	
	/*Getter*/
	public String getN(){
		return nom;
	}
	
	/*Setter*/
	public void setN(String p_nom){
		nom = p_nom;
	}
	
	public void ajoutParking(Parking p){
		lesParkings.add(p);
	}
	
	/*Affichage*/
	public void Afficher(){
		System.out.println(this.toString());
	}
	
	/*toString*/
	public String toString(){
		String res;
		res = "Zone "+nom;
		
		Iterator it = lesParkings.iterator();
		
		while(it.hasNext()){
			res += ((Parking)it.next()).toString();
		}
		
		return res;
	}
}
